{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
  <div class="container">
    <h2>Les derniers biens</h2>

    <div class="row flex">
      {% for property in properties %}
        <div class="col-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <a href="{{ path('property.show', { slug: property.slug, id: property.id }) }}">{{ property.title }}</a>
              </h5>
              <p class="card-text">{{ property.city }} ({{ property.postalCode }})</p>
              <div class="text-primary">{{ property.price | number_format(0, '', ' ')}} â‚¬</div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

  </div>
{% endblock %}
