{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
  <div class="jumbotron">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          {% if property.imageName %}
            <img src="{{ vich_uploader_asset(property, 'imageFile') }}" alt="" style="width: 100%; height: auto;">
          {% endif %}
        </div>
        <div class="col-md-4">
          <h1>{{ property.title }}</h1>
          <h2>{{ property.rooms }} pièces - {{ property.surface }} m2</h2>
          <div class="text-primary">{{ property.price | number_format(0, '', ' ')}} €</div>
          <a href="" class="btn btn-primary">Contacter l'agence</a>
        </div>
      </div>
    </div>
  </div>

  <p>{{ property.description | nl2br }}</p>

  <div class="row">
    <div class="col-md-8">
      <table class="table table-striped">
        <tr>
          <td>Surface habitable</td>
          <td>{{ property.surface }} m2</td>
        </tr>
        <tr>
          <td>Pièces</td>
          <td>{{ property.rooms }}</td>
        </tr>
        <tr>
          <td>Chambre</td>
          <td>{{ property.bedrooms }}</td>
        </tr>
        <tr>
          <td>Etage</td>
          <td>{{ property.floor }}</td>
        </tr>
        <tr>
          <td>Chauffage</td>
          <td>{{ property.heat }}</td>
        </tr>
      </table>
    </div>
  </div>
{% endblock %}