{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
  <form method="post" action="{{ path('login') }}">
    {% if error %}
      <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
    <label for="username" class="sr-only">Email</label>
    <input type="text" value="{{ username }}" name="_username" id="username" class="form-control" placeholder="Login" required autofocus>
    <label for="password" class="sr-only">Password</label>
    <input type="password" name="_password" id="password" class="form-control" placeholder="Password" required>
    <button class="btn btn-lg btn-primary" type="submit">Login</button>
  </form>
{% endblock %}
